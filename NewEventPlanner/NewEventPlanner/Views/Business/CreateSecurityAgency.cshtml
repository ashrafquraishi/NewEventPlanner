@model NewEventPlanner.Models.Business

@{
    ViewBag.Title = "Creating Security Agency";
}

<style>
    body {
        background-position: center;
        height: 750px;
        background-image: url('../../Images/1.jpg');
        background-position: center;
        background-repeat: no-repeat, repeat;
        padding: 150px;
