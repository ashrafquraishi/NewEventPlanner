@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Paradox</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
</head>
<body>
    <style>
        body {
            background-position: center;
            height: 750px;
            /*background-image: url('../../Images/bg.jpg');*/
            background-position: center;
            background-repeat: no-repeat, repeat;
            padding: 150px;
        }
    </style>
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("User"))
        {
            <h1>You are now logged in.</h1>
            <h2>Choose from several options below:</h2>
            <ul>
                <li><a href="/Customer/Details">View You're Profile</a></li>
                <li><a href="/Customer/CreateRegularPickup">Request For Trash Pickup</a></li>
                <li><a href="/Customer/CreateSpecialPickup">Request For Special  Pickup</a></li>
                <li><a href="/Customer/CreateSuspendAccount">Suspend You're Pickup's</a></li>
                <li><a href="/Customer/MakePayment">Pay For You're service</a></li>
                <li><a href="/Customer/CheckBalance">Check You're Balance</a></li>
            </ul>
        }

        if (User.IsInRole("Business"))
        {
            <h1>Hello.</h1>
            <h2>Choose from several options below:</h2>
            <ul>

                <li><a href="/Business/CreateBusiness">Publish your Venue</a></li>
                @*<li><a href="/Employee/FilterByWeekday">Sort By Weekday</a></li>*@
            </ul>
        }
    }
    else
    {
        //No user is logged in
        <h2>Please login.</h2>
        <h3>How To - Instructions</h3>
        <ol>
            <li>Customer must login</li>
            <li>Customer must request fot trash pickup</li>

        </ol>
        <p><strong>Note:</strong> All employees must login to view all customer requests.</p>
    }
</body>
</html>